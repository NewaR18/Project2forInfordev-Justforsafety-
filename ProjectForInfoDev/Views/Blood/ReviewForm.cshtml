@model ProjectForInfoDev.Models.SpecialQuery

@{
    ViewData["Title"] = "ReviewForm";
}

<img src="~/mycover.jpg" alt="photos" class="img-fluid mr-md-3" width="100%"  /><br/><br/><br/>

<h4 style="color:#660000">New Queries</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ReviewForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SpecialName" class="control-label">Name:</label>
                <input asp-for="SpecialName" class="form-control" />
                <span asp-validation-for="SpecialName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpecialEmail" class="control-label">Email:</label>
                <input asp-for="SpecialEmail" class="form-control" />
                <span asp-validation-for="SpecialEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpecialAddress" class="control-label">Address:</label>
                <input asp-for="SpecialAddress" class="form-control" />
                <span asp-validation-for="SpecialAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpecialMessage" class="control-label">Message</label>
                <input asp-for="SpecialMessage" class="form-control" />
                <span asp-validation-for="SpecialMessage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn" style="background-color:#660000; color:white;"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
